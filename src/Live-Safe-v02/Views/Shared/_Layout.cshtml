
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Live_Safe_v02</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">LiveSafe v.02 (Alfa)</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                    </ul>

                    @* Só admin q pode enxergar isso*@
                    @if (User.IsInRole("Administrador")) {
                            <ul class="navbar-nav flex-grow-1">
                                @* Talvez isso não faça sentido exibir, mas depois eu vejo.. zZzZ...*@
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Expostos" asp-action="Index">Exposto</a>
                                </li>
                            </ul>
                            <ul class="navbar-nav">
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Usuarios" asp-action="Index">Lista de Usuarios</a>
                                    </li>
                            </ul>
                    }
                    @*Verifica se o usuário está logado na aplicação*@
                    @if (User.Identity.IsAuthenticated) {
                        @* Vai aprensentar o nome do usuário *@
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Usuarios" asp-action="Details" asp-route-id="">Olá, @User.Identity.Name!</a>
                            </li>
                            <li>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Usuarios" asp-action="Logout">Logout</a>
                            </li>
                        </ul>
                    } else {
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Usuarios" asp-action="Create">Sign Up</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Usuarios" asp-action="Login">Sign In</a>
                            </li>
                        </ul>
                    } 
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2023 - Live_Safe_v02 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            <br>
            <span id="datatime"></span>
        </div>
    </footer>
    <script>
        var dt = new Date();
        document.getElementById("datatime").innerHTML = dt.toLocaleString();
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
